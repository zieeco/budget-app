<section class="contact vh-100 d-flex justify-content-center">
  <div class="login-user d-flex flex-column pb-5 w-100">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :html => {:class => "form-style bg-white container-fluid"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="d-head d-flex align-items-center justify-content-between pt-3 pb-3 ps-e-12 mb-3">
          <%= render "/shared/back" %>
          <h2 class="text-center no-mb">Enter your email address</h2>
          <span>Next</span>
        </div>

      <div class="form-bdy no-bd">

        <div class="mailbox mx-auto d-flex align-items-center justify-content-center mbt-6">
          <i class="fa-solid fa-envelope-open-text fa-2xl fa-bounce" style="color: #ced4da; "></i>
        </div>

        <div class="">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address", class: 'form-control border-top-0 border-end-0 border-start-0' %>
        </div>

        <div class=" d-flex gap-3 align-items-center justify-content-center mb-3 fs-sm-1">
            <%= render "devise/shared/links" %>
        </div>

        <div class="mb-3">
            <%= f.submit "Reset Password", class: 'form-control btn btn-primary' %>
        </div>

      </div>
    <% end %>

  </div>
</section>

